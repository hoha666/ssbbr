@model GameDetailsViewModel

@{
    ViewData["Title"] = "جزئیات بازی";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h1>جزئیات بازی </h1>

<div>
    <h4>@Html.DisplayFor(model => model.name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.platform)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.platform)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.type_of_source)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.type_of_source)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.age_rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.age_rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.genre1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.genre1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @{
                var persianDateTime = new PersianDateTime(Model.CreatedDate); //Html.DisplayFor(model => model.CreatedDate)
                <p>@persianDateTime.ToString("yy-MM-dd")</p>
            } 
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ic.comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ic.comment)
        </dd>
        <dt class="col-sm-2">
            رسانه
        </dt>
        <dd class="col-sm-10">
            @for (int i = 0; i < Model.files.Count; i++)
            {
                string url = Model.files[i];
                url = "/" + url.Replace("\\thumbs\\", "\\");
                <a href="@url"><img src="~/@Html.DisplayFor(model => model.files[i])" /></a>
            }
            @*<img src="~/@Html.DisplayFor(model => model.files[0])" />
                <img src="~/@Html.DisplayFor(model => model.files[1])" />
                <img src="~/@Html.DisplayFor(model => model.files[2])" />
                <img src="~/@Html.DisplayFor(model => model.files[3])" />
                <img src="~/@Html.DisplayFor(model => model.files[4])" />
                <img src="~/@Html.DisplayFor(model => model.files[5])" />*@

        </dd>
    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.id">ویرایش</a> |*@
    <a asp-action="Index" asp-all-route-data="@(new Dictionary<string, string> { {"pagenumber",Model.pagenumber.ToString() } })">بازگشت به لیست بازی ها</a>
</div>
